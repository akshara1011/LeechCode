{
  "manifest_version": 3,
  "name": "LeechCode - Redirect Shorts & Save Time",
  "version": "1.1",
  "description": "Redirects YouTube Shorts to regular videos and starts a productivity timer.",
  "permissions": ["tabs", "scripting", "storage", "webNavigation"],
  "host_permissions": ["*://*.youtube.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  }
}



